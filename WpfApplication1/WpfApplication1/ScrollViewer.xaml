<Window x:Class="WpfApplication1.ScrollViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ScrollViewer" Height="400" Width="500" Loaded="Window_Loaded">
    <Grid>
        <StackPanel>
            <ScrollViewer Name="scroll" Width="480" Height="350 " HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Visible">
                <Label Name="label" Foreground="Gray" Margin="20,10" />
                
            </ScrollViewer >
        </StackPanel>
    </Grid>
</Window>
