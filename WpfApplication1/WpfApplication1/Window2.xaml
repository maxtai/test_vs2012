<Window x:Class="WpfApplication1.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window2" Height="300" Width="300">
    <Grid>
        <DockPanel Width="auto" Height="auto">
            <Button DockPanel.Dock="Left" Content="1"/>
            <Button DockPanel.Dock="Top" Content="2"/>
            <Button DockPanel.Dock="Right" Content="3" />
            <Button DockPanel.Dock="Bottom" Content="4" />
            <Button HorizontalAlignment="Left" Name="btnAddByCode" Height="22" Width="65" DockPanel.Dock="Left" Click="btnAddByCode_Click" >后台代码添加
            </Button>
            <Button DockPanel.Dock="Bottom" Height="22" Width="65"/>
        </DockPanel>
    </Grid>
</Window>
